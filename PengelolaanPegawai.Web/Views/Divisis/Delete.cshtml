@model PengelolaanPegawai.Web.Models.Divisi

@{
    ViewBag.Title = "Delete";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2>
                <i class="halflings-icon align-justify"></i><span class="break"></span>
                <i class="halflings-icon th-list"></i>@Html.ActionLink("kembali", "Index")
            </h2>
            <div class="box-icon">
                <a href="#" class="btn-setting">
                    <i class="halflings-icon wrench"></i>
                </a>
                <a href="#" class="btn-minimize">
                    <i class="halflings-icon chevron-up"></i>
                </a>
                <a href="#" class="btn-close">
                    <i class="halflings-icon remove"></i>
                </a>
            </div>
        </div>

        <div class="box-content">
            @using (Html.BeginForm("Delete", "Divisis", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <h3>Are you sure you want to delete this?</h3>

                    <div class="control-group">
                        @Html.LabelFor(model => model.NamaDivisi, htmlAttributes: new { @class = "control-label" })
                        <div class="controls">
                            <span class="input-xlarge uneditable-input">
                                @Html.DisplayFor(model => model.NamaDivisi)
                            </span>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>

                </fieldset>
            }
        </div>
    </div>
</div>